---
import { Button } from "@/shadcn/components/ui/button";
import { FaGithub } from "react-icons/fa";
import Layout from "../layouts/Layout.astro";
---

<Layout title="WiibuCore">
	<div
		class="relative border-2 border-primary pl-10 py-10 pr-20 md:pr-48 rounded-2xl"
	>
		<img
			class="w-1/2 md:w-1/3 md:-mt-[130px] -mt-[165px] ml-36 md:ml-72 absolute"
			src="/anime.png"
			alt="logo"
		/>
		<h1 class="text-3xl md:text-6xl text-white font-bold">Welcome</h1>
	</div>
	<p class="text-2xl text-white text-center font-comic-shanns mt-2">
		Wiibu<span class="text-3xl text-primary font-semibold">Core</span>
	</p>
	<div class="text-white text-md text-center pt-2">
		<p class="mb-4">This project contains everything related to anime.</p>
		<a href="https://github.com/WiibuCore/wiibucore-web">
			<Button variant="outline" className="gap-2 border-2 border-white">
				<FaGithub size="20" />
				Github
			</Button>
		</a>
	</div>
</Layout>
